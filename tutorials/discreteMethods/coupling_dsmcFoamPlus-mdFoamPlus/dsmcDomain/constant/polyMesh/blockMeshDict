FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant/polyMesh";
    object      blockMeshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 5e-8;

// DSMC domain size in nm (250 50 50) - 50nm gap in middle for MD domain

vertices
(
    //Vertices for left DSMC zone
    (0 0 0) //0
    (2 0 0) //1
    (2 1 0) //2
    (0 1 0) //3
    (0 0 1) //4
    (2 0 1) //5
    (2 1 1) //6
    (0 1 1) //7

    //Vertices for right DSMC zone    
    (3 0 0) //8
    (5 0 0) //9
    (5 1 0) //10
    (3 1 0) //11
    (3 0 1) //12
    (5 0 1) //13
    (5 1 1) //14
    (3 1 1) //15   
);

blocks
(
    hex (0 1 2 3 4 5 6 7) left (20 1 1) simpleGrading (1 1 1)   
    hex (8 9 10 11 12 13 14 15) right (20 1 1) simpleGrading (1 1 1)
);

boundary
(
    //dsmcZoneLeft boundaries
    cyclicX_left
    {
        type cyclic;
        faces ((0 3 7 4));
        neighbourPatch cyclicX_right;
    }

    couplingX_left_middle
    {
        type patch;
        faces ((1 2 6 5));
    }   

    cyclicY_left_top
    {
        type cyclic;
        faces ((3 2 6 7));
        neighbourPatch cyclicY_left_bottom;
    }

    cyclicY_left_bottom
    {
        type cyclic;
        faces ((0 1 5 4));
        neighbourPatch cyclicY_left_top;
    }  

    cyclicZ_left_front
    {
        type cyclic;
        faces ((0 1 2 3));
        neighbourPatch cyclicZ_left_back;
    }

    cyclicZ_left_back
    {
        type cyclic;
        faces ((4 5 6 7));
        neighbourPatch cyclicZ_left_front;
    }

    //dsmcZoneRight boundaries
    cyclicX_right
    {
        type cyclic;
        faces ((9 10 14 13));
        neighbourPatch cyclicX_left;
    }

    couplingX_right_middle
    {
        type patch;
        faces ((8 11 15 12));
    }

    cyclicY_right_top
    {
        type cyclic;
        faces ((11 10 14 15));
        neighbourPatch cyclicY_right_bottom;
    }

    cyclicY_right_bottom
    {
        type cyclic;
        faces ((8 9 13 12));
        neighbourPatch cyclicY_right_top;
    }  

    cyclicZ_right_front
    {
        type cyclic;
        faces ((8 9 10 11));
        neighbourPatch cyclicZ_right_back;
    }

    cyclicZ_right_back
    {
        type cyclic;
        faces ((12 13 14 15));
        neighbourPatch cyclicZ_right_front;
    }
)

mergePatchPairs
(
);


