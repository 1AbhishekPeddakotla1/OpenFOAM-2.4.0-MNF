FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controllersDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

polyStateControllers
(
    // thermostat
    
    controller
    {
 	    zoneName            mdZone;

        stateControllerModel       polyTemperatureBerendsenBinsNew;

        polyTemperatureBerendsenBinsNewProperties
        {
            temperature             3.816;
            tauT                    0.04;
            molIds                  (water);
            peculiar                yes;

            binModel                uniformBins;

            uniformBinsProperties
            {
                startPoint                  (0 0 0);
                endPoint                    (16 0 0);
                nBins                       4; 
                area                        100; // dummy variable
            }
        }
    }
);

polyFluxControllers
(

);

polyCouplingControllers
(
    controller
    {
 	zoneName                    mdZone;
        stateControllerModel        polyCoupling;

        polyCouplingProperties
        { 	   
            molIds                  (water);      
        }

	polyCouplingSending
	{
	    sendingInterfaces       (ifs_1and2 ifs_2and3);	    
	    mass		    yes;
	    density		    yes;
	}

	polyCouplingReceiving
	{
	    receivingInterfaces     (ifs_1and2 ifs_2and3);
	    mass		    yes;
	    density		    yes;
	}
    }
);    

